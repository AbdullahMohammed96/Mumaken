@model Mumaken.Domain.Entities.SettingTables.Nationality
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">@localizer["Add Nationality"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">@localizer["Name in Arabic"]</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">@localizer["Name in English"]</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <button type="button" id="btncli" class="btn-new-style btn-rounded" onclick="validation()">@localizer["Add"]</button>
                        <button type="submit" hidden class="btn-new-style btn-rounded" id="btnSubmit">@localizer["Add"]</button>
                    </div>
                </div>
                <div class="col-md-12">
                    <div>
                        <a asp-action="Index" class="btn-black">@localizer["Back to Main Page"]</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        function validation() {
            if ($("#NameAr").val() == 0) {
                toastr.error("@localizer["Please enter the name in Arabic correctly"]");
                return false;
            }
            else if ($("#NameEn").val() == 0) {
                toastr.error("@localizer["Please enter the name in English correctly"]");
                return false;
            }
            else {
                $("#btncli").prop("disabled", true);
                $("#btnSubmit").click();
            }
        }
    </script>
}
