@model Mumaken.Domain.ViewModel.Region.EditRegoinViewModel

@{
    ViewData["Title"] = @localizer["Edit Region"];
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">@localizer["Edit Region"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label asp-for="NameAr" class="control-label">@localizer["Name in Arabic"]</label>
                    <input asp-for="NameAr" class="form-control" />
                    <span asp-validation-for="NameAr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NameEn" class="control-label">@localizer["Name in English"]</label>
                    <input asp-for="NameEn" class="form-control" />
                    <span asp-validation-for="NameEn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fk_City" class="control-label">@localizer["City"]</label>
                    <select asp-for="Fk_City"
                            class="form-control"
                            asp-items="@ViewBag.city">
                        <option value="0" selected="selected">@localizer["Please select your city"]</option>
                    </select>
                    <span asp-validation-for="Fk_City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@localizer["Edit"]" class="btn-new-style btn-rounded" />
                </div>
                <div>
                    <a asp-controller="Regions" asp-action="Index" class="btn-black">@localizer["Back to Home"]</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
