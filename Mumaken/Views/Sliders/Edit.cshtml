@model Mumaken.Domain.ViewModel.Slider.EditSliderViewModel

@{
    ViewData["Title"] = "تعديل";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-box">
    <h2 class="header-title m-t-0 m-b-30">@localizer["Edit"]</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />


                <div class="form-group">
                    <label asp-for="ImgAr" class="control-label">@localizer["ImageAr"]</label>
                    <div class="col-md-10">
                        <img src="@Model.ImgAr" style="width:100px; height:100px; " />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewImgAr" class="control-label">@localizer["NewImgAr"]</label>
                    <div>
                        <input asp-for="NewImgAr" accept="image/*" class="form-control" />
                        <span asp-validation-for="NewImgAr" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ImgEn" class="control-label">@localizer["ImageEn"]</label>
                    <div class="col-md-10">
                        <img src="@Model.ImgEn" style="width:100px; height:100px; " />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewImgEn" class="control-label">@localizer["NewImgEn"]</label>
                    <div>
                        <input asp-for="NewImgEn" accept="image/*" class="form-control" />
                        <span asp-validation-for="NewImgEn" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="@localizer["Edit"]" class="btn-new-style btn-rounded" />
                </div>
                <div>
                    <a asp-action="Index" class="btn-black">@localizer["Back to Home"]</a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}