@model IEnumerable<Mumaken.Domain.ViewModel.Auth.GetCampanyCaptainsViewModel>;
@{
    ViewData["Title"] = @localizer["Drivers"];
}
<div class="card-box">

    <h2 class="header-title m-t-0 m-b-30">@localizer["Drivers"]</h2>

    <div>
        <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>@localizer["Driver Name"]</th>
                    <th>@localizer["Phone Number"]</th>
                    <th>@localizer["Image"]</th>
                    <th>@localizer["Date Added"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.UserName
                        </td>
                        <td>
                            @item.Phone
                        </td>
                        <td>
                            <img src="@item.ImageProfile" />
                        </td>
                        <td>
                            @item.CreationDate
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- -------------------------------------------------------------------------------------------------- -->
    </div><!-- end row -->
</div>
