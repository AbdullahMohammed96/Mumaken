@model Mumaken.Domain.ViewModel.Cars.GetCarDetails
<div class="section_style mb-4">
    <h3 class="main-card-title">@localizer["Car Data"]</h3>

    <div class="content">

        <div class="main_item">
            <span class="main_item_first">@localizer["Image"]</span>
            <img src="@Model.Image" alt="" class="small_img circle">
        </div>

        <div class="main_item">
            <span class="main_item_first">@localizer["Number"]</span>
            <span class="main_item_sec">@Model.CarNumber</span>
        </div>

        <div class="main_item">
            <span class="main_item_first">@localizer["Category"]</span>
            <span class="main_item_sec"> @Model.CarCategory</span>
        </div>

        <div class="main_item">
            <span class="main_item_first">@localizer["Type"]</span>
            <span class="main_item_sec">@Model.CarType</span>
        </div>

        <div class="main_item">
            <span class="main_item_first">@localizer["Model"]</span>
            <span class="main_item_sec">@Model.CarModel </span>
        </div>

        <div class="main_item">
            <span class="main_item_first">@localizer["Rental Price per Day"]</span>
            <span class="main_item_sec">@Model.DailyPrice @localizer["SAR"]</span>
        </div>

    </div>
</div>

