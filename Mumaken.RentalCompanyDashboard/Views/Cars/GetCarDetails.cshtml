<div class="section_style mb-4">
    <h3 class="main-card-title">@localizer["Notes"]</h3>

    <div class="content p-4">

        <p class="fs13 lh-md c-black">
            @Model.Note
        </p>

    </div>
</div>

<div class="d-flex gap-3 mt-4">
    <a asp-action="EditCar" asp-controller="Cars" asp-route-carId="@Model.Id" class="main-btn md up">@localizer["Edit"]</a>
    <button type="button" data-bs-toggle="modal" data-bs-target="#deleteModal" class="main-btn md up red">@localizer["Delete"]</button>
</div>

<!-- ==================================== Start Delete Modal ==================================== -->
<div class="modal fade" id="deleteModal" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
     tabindex="-1">
    <div class="modal-dialog sm modal-dialog-centered">
        <div class="modal-content p-4 pt-5">

            <button class="close-model-btn" data-bs-dismiss="modal"><i class="fa-solid fa-xmark"></i></button>

            <p class="fs15 c-black text-center">@localizer["Do you really want to delete the car?"]</p>

            <div class="d-flex gap-3 mt-4 w-100">
                <a asp-action="DeleteCar" asp-controller="Cars" asp-route-carId="@Model.Id"  class="main-btn red up flex-grow-1">@localizer["Yes"]</a>
                <button type="button" data-bs-dismiss="modal" class="main-btn up flex-grow-1">@localizer["No"]</button>
            </div>

        </div>
    </div>
</div>
<!-- ==================================== End Delete Modal ==================================== -->
